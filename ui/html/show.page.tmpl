{{template "base" .}}

{{define "title"}}Snippet #{{.Snippet.ID}}{{end}}

{{define "main"}}
    {{with .Snippet}}
    <div class="snippet">
        <div class="metadata">
            <strong>{{.Title}}</strong>
            <span>{{.ID}}</span>
        </div>
        <pre><code>{{.Content}}</code></pre>
        {{len nil}}
        <div class="metadata">
            <time>{{.Created}}</time>
            <time>&nbsp;{{.Created.Weekday}}</time>
            <time>{{.Expires}}</time>
        </div>
    </div>
    {{end}}
{{end}}